generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:admin@localhost:3306/posts"
}

model Posts {
  id            Int      @id @default(autoincrement())
  imageName     String
  caption       String
  totalComments Int      @default(0)
  totalLikes    Int      @default(0)
  created       DateTime @default(now())
}
